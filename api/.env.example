# Google Flights API Environment Configuration

# ==========================================
# SERVER CONFIGURATION
# ==========================================

# Server port (default: 8000)
PORT=8000

# Server host (default: 0.0.0.0 for all interfaces)
HOST=0.0.0.0

# Number of uvicorn workers (recommended: CPU cores)
WORKERS=4

# Python path
PYTHONPATH=/app

# ==========================================
# APPLICATION SETTINGS
# ==========================================

# Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Application environment (development, staging, production)
ENVIRONMENT=production

# ==========================================
# OPTIONAL: FUTURE FEATURES
# ==========================================

# Redis URL for caching (optional)
# REDIS_URL=redis://localhost:6379

# API Key for authentication (optional)
# API_KEY=your-secret-api-key

# JWT Secret for token authentication (optional)
# JWT_SECRET=your-jwt-secret-key

# Database URL (for future persistent storage)
# DATABASE_URL=postgresql://user:password@localhost:5432/flights_db

# ==========================================
# EXTERNAL SERVICES
# ==========================================

# Webhook timeout in seconds
WEBHOOK_TIMEOUT=10

# Request timeout for external APIs
REQUEST_TIMEOUT=30

# ==========================================
# MONITORING & ANALYTICS
# ==========================================

# Enable detailed logging
ENABLE_DETAILED_LOGGING=true

# Metrics collection interval (seconds)
METRICS_INTERVAL=60

# ==========================================
# SECURITY SETTINGS
# ==========================================

# CORS allowed origins (comma-separated)
CORS_ORIGINS=*

# Rate limiting (requests per minute per IP)
RATE_LIMIT=100

# API request timeout
API_TIMEOUT=30

# ==========================================
# PLAYWRIGHT SETTINGS
# ==========================================

# Browser timeout (milliseconds)
BROWSER_TIMEOUT=30000

# Headless mode (true for production)
HEADLESS=true

# User agent string
USER_AGENT=Mozilla/5.0 (X11; Linux x86_64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/120.0.0.0 Safari/537.36

# ==========================================
# CARBON FOOTPRINT SETTINGS
# ==========================================

# Carbon calculation method (ICAO, IATA)
CARBON_METHOD=ICAO

# Default aircraft type for calculations
DEFAULT_AIRCRAFT=737-800

# ==========================================
# EMAIL SETTINGS (for future features)
# ==========================================

# SMTP server
# SMTP_SERVER=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your-email@gmail.com
# SMTP_PASSWORD=your-app-password

# ==========================================
# BACKUP SETTINGS
# ==========================================

# Backup interval (hours)
BACKUP_INTERVAL=24

# Backup retention (days)
BACKUP_RETENTION=7

# ==========================================
# DEVELOPMENT SETTINGS (ignore in production)
# ==========================================

# Debug mode (set to false in production)
DEBUG=false

# Reload on code changes (development only)
RELOAD=false

# Hot reload (development only)
HOT_RELOAD=false
